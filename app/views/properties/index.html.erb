<% if @properties == [] %>
  <h1><br /> There are currently no properties added. <br /><%= link_to "Please add a new property", new_property_path, :class => "btn btn-large btn-primary" %> </h1>
<% else %>
  <table class="table">
    <tr>
      <th>Property</th>
      <th>Address</th>
      <th>Type</th>
    </tr>
    <% @properties.each do |p| %>
      <tr>
        <td><%= link_to p.name, property_path(p) %></td>
        <td><%= "#{p.address.line1} #{p.address.line2 unless nil}, #{p.address.city}, #{p.address.state}" %></td>
        <td><%= TypeOfProperty.find(p.type_id).name %></td>
      </tr>
    <% end %>
  </table>
<% end %>
